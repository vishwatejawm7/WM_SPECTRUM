#include<iostream>
using namespace std;
int main()
{
    int a,temp{0},k{0};
    cout << "Enter a number to check if perfect square : ";
    cin >> a;
    for(int i=1; i<a; i++)
    {
        if(i*i == a)
        {
           temp = i*i; 
           k = i;
        }
    }
    if(temp == a)
    {
        cout << k << " * " << k << " = " << k*k << endl;
        cout << "Therefore " << a << " is a perfect square" << endl;
    }
    else
    {
        cout << a << " is not a perfect square" << endl;
    }
    return 0;
}
