#include<iostream>
using namespace std;
int main()
{
    int n, k{0};
    cout << "Enter the number of people : ";
    cin >> n;
    int j{1}, sum{0};
    for(int i=1; i<=n; i++)
    {
        k = n - j;
        j += 1;
        sum += k;
    }
    cout << "The total number of handshakes between " << n << " people are : " << sum << endl;
    return 0;
}
