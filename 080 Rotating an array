#include <iostream>

using namespace std;

int main()
{
    int a,arr[100],k{0};
    cout << "Enter the size of the array : ";
    cin >> a;
    for(int i=0; i<a; i++)
    {
        cout << "Enter the element " << i << " : ";
        cin >> arr[i];
    }
    cout << "Array : ";
    for(int i=0; i<a; i++)
    {
        cout << arr[i] << " ";
    }
    cout << "\nEnter the index to rotate : ";
    cin >> k;
    cout << "\nRotated array : ";
    for(int i=k; i<a; i++)
    {
        cout << arr[i] << " ";
    }
    for(int i=0; i<k; i++)
    {
        cout << arr[i] << " ";
    }
    return 0;
}
