#include <iostream>

using namespace std;

int main()
{
    int a, b{1};
    cout << "Pyramid pattern\nEnter the number of rows : ";
    cin >> a;
    for(int i=1; i<=a; i++)
    {
        for(int k=a; k>i; k--)
        {
            cout << " ";
        }
        for(int j=1; j<=b; j++)
        {
           cout << "*";
        }
        b += 2;
        cout << endl;
    }

    return 0;
}
