#include <iostream>

using namespace std;

int main()
{
    int a;
    cout << "Mirrored rhombus pattern\nEnter the number of rows/columns : ";
    cin >> a;
    for(int i=1; i<=a; i++)
    {
        for(int k=a; k>i; k--)
        {
            cout << " ";
        }
        for(int j=1; j<=a; j++)
        {
           cout << "*";
        }
        cout << endl;
    }

    return 0;
}
