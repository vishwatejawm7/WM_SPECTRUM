#include<iostream>
using namespace std;
int main()
{
    int a,arr[100];
    cout << "Enter the size of the array : ";
    cin >> a;
    for(int i=1; i<=a; i++)
    {
        cout << "Enter the element " << i << " : ";
        cin >> arr[i];
    }
    cout << "\nArray : ";
    for(int i=1; i<=a; i++)
    {
        cout << arr[i] << " ";
    }
    cout << "\nReversed array : ";
    for(int i=a; i>=1; i--)
    {
        cout << arr[i] << " ";
    }
    return 0;
}
