#include<iostream>
using namespace std;
int main()
{
    int a, arr[100];
    cout << "Enter the size of the array : ";
    cin >> a;
    for(int i=0; i<a; i++)
    {
        cout << "Enter the element " << i << " : ";
        cin >> arr[i];
    }
    int sum{0};
    cout << "\nSum : ";
    for(int i=0; i<a; i++)
    {
        sum += arr[i];
        cout << arr[i] << " + ";
    }
    cout << " = " << sum ;
    return 0;
}
