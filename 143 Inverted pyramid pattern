#include<iostream>

using namespace std;

int main()
{
    int a, l{0};
    cout << "Inverted pyramid pattern\nEnter the number of rows : ";
    cin >> a;
    for(int i=a-1; i>=0; i--)
    {
        for(int k=0; k<l; k++)
        {
            cout << " ";
        }
        for(int j=i*2; j>=0; j--)
        {
            cout << "*";
        }
        cout << endl;
        l++;
    }
}
