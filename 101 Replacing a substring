#include<iostream>
#include<string>
using namespace std;
int main()
{
    string a,b,c,d;
    cout << "Enter a word : ";
    getline(cin,a);
    cout << "Enter the substring to be replaced : ";
    getline(cin,b);
    cout << "Enter the new data : ";
    getline(cin,c);
    d = a.replace(a.find(b),b.length(),c);
    cout << "New replaced string : " << d;
}
