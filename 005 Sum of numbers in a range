#include<iostream>
using namespace std;
int main()
{
    int a,b;
    cout << "Enter the first limit : ";
    cin >> a;
    cout << "Enter the second limit : ";
    cin >> b;
    cout << "The sum of numbers in the range " << a << " and " << b << " are : ";
    for(int i=a; i<b; i++)
    {
        cout << i << " + ";
    }
    cout << b << " = ";
    cout << b*(b+1)/2 - a*(a+1)/2 + a;
    return 0;
}
