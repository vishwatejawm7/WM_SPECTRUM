#include <iostream>

using namespace std;

int main()
{
    int a;
    cout << "Hollow pattern\nEnter the number of rows/columns : ";
    cin >> a;
    for(int i=1; i<=a; i++)
    {
        for(int j=1; j<=a; j++)
        {
            if(i == 1 || i == a)
            {
                cout << "*";
            }
            else if(j == 1 || j == a)
            {
                cout << "*";
            }
            else
            {
                cout << " ";
            }
        }
        cout << endl;
    }

    return 0;
}
