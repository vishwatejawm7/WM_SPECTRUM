#include<iostream>
#include<string>
using namespace std;
int main()
{
    string a,b,c;
    cout << "Enter a sentence : ";
    getline(cin,a);
    cout << "Enter the word to be replaced : ";
    getline(cin,b);
    cout << "Enter the new word : ";
    getline(cin,c);
    cout << "Updated sentence : " << a.replace(a.find(b),b.length(),c);
}
