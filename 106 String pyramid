#include <iostream>
#include <string>

using namespace std;

int main()
{
    string a;
    cout << "Enter a string : ";
    getline(cin,a);
    int k = a.length();
    for(int i=0; i<k; i++)
    {
        for(int j=0; j<k-i-1; j++)
        {
            cout << " ";
        }
        for(int g=0; g<=i; g++)
        {
            cout << a[g];
        }
        for(int f=i-1; f>=0; f--)
        {
            cout << a[f];
        }
        cout << endl;
    }

    return 0;
}
